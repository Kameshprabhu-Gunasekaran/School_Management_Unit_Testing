<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="ffddf3a8-699a-48fa-9364-deaf2845d5a8" author="Prabhu">
        <createTable tableName="student">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="dob" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="contact_number" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="school_id" type="BIGINT"/>
            <column name="tutor_id" type="BIGINT"/>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="student"
                baseColumnNames="school_id"
                constraintName="fk_student_school"
                referencedTableName="school"
                referencedColumnNames="id"
                onDelete="SET NULL"/>

        <addForeignKeyConstraint
                baseTableName="student"
                baseColumnNames="tutor_id"
                constraintName="fk_student_tutor"
                referencedTableName="tutor"
                referencedColumnNames="id"
                onDelete="SET NULL"/>
    </changeSet>

</databaseChangeLog>